# Django Dorm Finder - Environment Variables Template
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (Development)
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/dorm_finder_db

# For MySQL (Alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/dorm_finder_db

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# File Storage
# For local development
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# For AWS S3 (Production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Payment Gateway (for future implementation)
# STRIPE_PUBLISHABLE_KEY=pk_test_your_key
# STRIPE_SECRET_KEY=sk_test_your_key
# PAYMONGO_PUBLIC_KEY=your-public-key
# PAYMONGO_SECRET_KEY=your-secret-key

# Social Authentication (optional)
# GOOGLE_OAUTH2_CLIENT_ID=your-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-client-secret
# FACEBOOK_APP_ID=your-app-id
# FACEBOOK_APP_SECRET=your-app-secret

# Monitoring and Logging
# SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# API Keys
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# OPENWEATHER_API_KEY=your-openweather-api-key

# Development Tools
DJANGO_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS=True
