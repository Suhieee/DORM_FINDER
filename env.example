# Django Dorm Finder - Environment Variables Template
# Copy this file to .env and update with your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-new-one-for-production
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Site URL for email verification links (Production)
# Set this to your production domain (e.g., 'https://yourdomain.com')
# This ensures email verification links use the correct domain
SITE_URL=https://yourdomain.com

# Database Configuration
# Option 1: Use DATABASE_URL (recommended for production)
# For PostgreSQL (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/dorm_finder_db

# Option 2: Use individual database settings (alternative)
# For PostgreSQL
DB_ENGINE=django.db.backends.postgresql
DB_NAME=dorm_finder
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_HOST=localhost
DB_PORT=5432

# For SQLite (Development - fallback if PostgreSQL not configured)
# Leave DB_ENGINE empty or set to sqlite to use SQLite
# DB_ENGINE=django.db.backends.sqlite3

# Email Configuration
# For development (console output)
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production (Gmail SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-gmail-app-password-16-chars-no-spaces
DEFAULT_FROM_EMAIL=your-email@gmail.com

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379/0

# File Storage
# For local development
MEDIA_ROOT=media/
STATIC_ROOT=staticfiles/

# For AWS S3 (Production)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Payment Gateway Configuration
# MonGo Pay (Test Mode)
MONGOPAY_API_KEY=
MONGOPAY_SECRET_KEY=
MONGOPAY_MERCHANT_ID=
MONGOPAY_TEST_MODE=True

# PayMongo (GCash Integration - Test Mode)
# Get your test keys from https://dashboard.paymongo.com
PAYMONGO_SECRET_KEY=sk_test_your_secret_key_here
PAYMONGO_PUBLIC_KEY=pk_test_your_public_key_here
PAYMONGO_WEBHOOK_SECRET=

# Google Gemini AI Chatbot
# Get free API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-2.0-flash-exp

# Social Authentication (optional)
# GOOGLE_OAUTH2_CLIENT_ID=your-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-client-secret
# FACEBOOK_APP_ID=your-app-id
# FACEBOOK_APP_SECRET=your-app-secret

# Monitoring and Logging
# SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=INFO

# API Keys
# GOOGLE_MAPS_API_KEY=your-google-maps-api-key
# OPENWEATHER_API_KEY=your-openweather-api-key

# Development Tools
DJANGO_DEBUG_TOOLBAR=True
DJANGO_EXTENSIONS=True
